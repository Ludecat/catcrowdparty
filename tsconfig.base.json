{
	"compilerOptions": {
		"target": "esnext",
		"strict": true,
		"module": "commonjs",
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"isolatedModules": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"composite": true
	},
	"exclude": ["node_modules"]
}
